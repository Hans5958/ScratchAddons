{
  "$schema": "https://raw.githubusercontent.com/ScratchAddons/manifest-schema/dist/schema.json",
  "name": "Tooltips",
  "description": "Adds tooltips for projects, users, and studios.",
  "credits": [
    {
      "name": "Hans5958"
    }
  ],
  "userscripts": [
    {
      "url": "script.js",
      "matches": ["https://scratch.mit.edu/*"]
    }
  ],
  "userstyles": [
    {
      "url": "style.css",
      "matches": ["https://scratch.mit.edu/*"],
      "settingMatch": {
        "id": "styleAsNormalText",
        "value": true
      }
    }
  ],
  "settings": [
    {
      "id": "styleAsNormalText",
      "name": "Style as normal text",
      "type": "boolean",
      "default": false
    }
  ],
  "tags": ["community"],
  "enabledByDefault": false,
}
