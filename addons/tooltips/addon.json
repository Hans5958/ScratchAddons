{
  "$schema": "https://raw.githubusercontent.com/ScratchAddons/manifest-schema/dist/schema.json",
  "//": "^ Don't forget to remove that before PR!",
  "name": "Tooltips",
  "description": "Adds tooltips for projects, users, studios, forum topics, and forum posts. Uses the Scratch API and ScratchDB.",
  "credits": [
    {
      "name": "Hans5958"
    }
  ],
  "userscripts": [
    {
      "url": "script.js",
      "matches": ["https://scratch.mit.edu/*"]
    }
  ],
  "userstyles": [
    {
      "url": "base.css",
      "matches": ["https://scratch.mit.edu/*"]
    },
    {
      "url": "scratch2.css",
      "matches": ["https://scratch.mit.edu/*"],
      "settingMatch": {
        "id": "theme",
        "value": "scratch2"
      }
    },
    {
      "url": "scratch3.css",
      "matches": ["https://scratch.mit.edu/*"],
      "settingMatch": {
        "id": "theme",
        "value": "scratch3"
      }
    }
  ],
  "settings": [
    {
      "id": "theme",
      "name": "Theme",
      "type": "select",
      "potentialValues": [
        {
          "id": "scratch3",
          "name": "Scratch 3"
        },
        {
          "id": "scratch2",
          "name": "Scratch 2"
        }
      ],
      "default": "scratch3"
    },
    {
      "id": "color-scheme",
      "name": "Color scheme",
      "type": "select",
      "potentialValues": [
        {
          "id": "auto",
          "name": "Auto"
        },
        {
          "id": "light",
          "name": "Light"  
        },
        {
          "id": "dark",
          "name": "Dark"
        }
      ],
      "default": "auto"
    },
    {
      "id": "forceAll",
      "name": "Force tooltips on all possible links",
      "type": "boolean",
      "default": false
    }
  ],
  "tags": ["community"],
  "enabledByDefault": true,
  "//": "^ Don't forget set enabledByDefault to false!"
}
